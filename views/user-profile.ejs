    <script src="../../public/vendors/bower_components/switchery/dist/switchery.min.js"></script>

    <!-- Data table JavaScript -->
    <script src="../../public/vendors/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>

    <!-- Gallery JavaScript -->
    <script src="../../public/dist/js/isotope.js"></script>
    <script src="../../public/dist/js/lightgallery-all.js"></script>
    <script src="../../public/dist/js/froogaloop2.min.js"></script>
    <script src="../../public/dist/js/gallery-data.js"></script>

    <!-- twitter JavaScript -->
    <script src="../../public/dist/js/twitterFetcher.js"></script>

    <!-- Spectragram JavaScript -->
    <script src="../../public/dist/js/spectragram.min.js"></script>

    <!-- Init JavaScript -->
    <script src="../../public/dist/js/init.js"></script>
    <script src="../../public/dist/js/widgets-data.js"></script>

</body>

</html>