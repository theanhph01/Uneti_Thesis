                <span class="input-group-btn">
                <button type="button" class="btn  btn-default"  data-target="#search_form" data-toggle="collapse" aria-label="Close" aria-expanded="true"><i class="zmdi zmdi-search"></i></button>
                </span>
            </div>
        </form>
    </div>
    
    <%var user = user%>
    <%if(user) {%>
    <div id="mobile_only_nav" class="mobile-only-nav pull-right">
        <ul class="nav navbar-right top-nav pull-right">
            <%if(user.role == 0){%>
            <li class="dropdown alert-drp">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="zmdi zmdi-shopping-basket top-nav-icon"></i><span id="number" class="top-nav-icon-badge"><%=user.number_cart%></span></a>
                <ul  class="dropdown-menu alert-dropdown" data-dropdown-in="bounceIn" data-dropdown-out="bounceOut">
                    <li>
                        <div class="notification-box-head-wrap" style="height: auto;">
                            <span class="notification-box-head pull-left inline-block">Giỏ hàng</span>
                            <a class="txt-danger pull-right clear-notifications inline-block" style="color: green !important" href="/order-cart"> Xem chi tiết giỏ hàng </a>
                            <div class="clearfix"></div>
                            <hr class="light-grey-hr ma-0"/>
                        </div>
                    </li>
                    <%if(user.product_cart && user.product_cart.length > 0){%>
                    <li>
                        <div class="streamline message-nicescroll-bar">
                            <%user.product_cart.forEach(item =>{%>  
                            <div class="sl-item">
                                <a href="/home/productdetails/<%=item.product_id%>">
                                    <div class="icon">
                                        <img src="../../public/upload/<%=item.file_name%>" alt="" style="width: 46px; height: 44px;">
                                    </div>
                                    <div class="sl-content">
                                        <span class="inline-block capitalize-font  pull-left truncate head-notifications">
                                        <%=item.product_name%></span>
                                        <span class="inline-block font-11  pull-right notifications-time">Số lượng: <%=item.quantity%> </span>
                                        <div class="clearfix"></div>
                                        <p class="truncate">Đơn giá: <%=(item.price * item.quantity).toLocaleString('vi-VN')%> VNĐ</p>
                                    </div>
                                </a>	
                            </div>
                            <hr class="light-grey-hr ma-0"/>
                            <%})%>  
                        </div>
                    </li>
                    <%}%>
                </ul>
            </li>
            <%}%>
            <li class="dropdown auth-drp">
                <a href="#" class="dropdown-toggle pr-0" data-toggle="dropdown"><img src="../../../public/upload/<%=user.avatar%>" alt="user_auth" class="user-auth-img img-circle"/><span class="user-online-status"></span></a>
                <ul class="dropdown-menu user-auth-dropdown" data-dropdown-in="flipInX" data-dropdown-out="flipOutX">
                    <li>
                        <a href="/profile"><i class="zmdi zmdi-account"></i><span>Hồ Sơ</span></a>
                    </li>
                    <li class="divider"></li>
                    <li>
